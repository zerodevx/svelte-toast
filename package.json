{
  "name": "@zerodevx/svelte-toast",
  "version": "0.9.6",
  "description": "Simple elegant toast notifications",
  "author": "Jason Lee <jason@zerodevx.com>",
  "scripts": {
    "dev": "vite dev",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json --watch",
    "format": "prettier --write .",
    "lint": "prettier --check . && eslint && npm run check",
    "test": "playwright test",
    "build": "zx build.mjs",
    "package": "zx build.mjs --packageOnly"
  },
  "peerDependencies": {
    "svelte": "^3.57.0 || ^4.0.0 || ^5.0.0"
  },
  "devDependencies": {
    "@fontsource-variable/inter": "^5.1.0",
    "@iconify-json/mdi": "^1.2.0",
    "@iconify/tailwind": "^1.1.3",
    "@playwright/test": "^1.47.2",
    "@sveltejs/adapter-static": "^3.0.5",
    "@sveltejs/kit": "^2.5.28",
    "@sveltejs/package": "^2.3.5",
    "@sveltejs/vite-plugin-svelte": "^3.1.2",
    "@tailwindcss/typography": "^0.5.15",
    "@types/eslint": "^9.6.1",
    "autoprefixer": "^10.4.20",
    "camelcase": "^8.0.0",
    "daisyui": "^4.12.10",
    "eslint": "^9.11.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-svelte": "^2.44.0",
    "globals": "^15.9.0",
    "postcss": "^8.4.47",
    "prettier": "^3.3.3",
    "prettier-plugin-svelte": "^3.2.6",
    "prettier-plugin-tailwindcss": "^0.6.6",
    "prismjs": "^1.29.0",
    "svelte": "^4.2.19",
    "svelte-check": "^4.0.2",
    "tailwindcss": "^3.4.12",
    "terser": "^5.33.0",
    "typescript": "^5.6.2",
    "vite": "^5.4.7"
  },
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js"
    },
    "./dist": {
      "import": "./dist/dist/index.es.js",
      "require": "./dist/dist/index.umd.cjs"
    }
  },
  "svelte": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "jsdelivr": "./dist/dist/index.umd.js",
  "files": [
    "dist"
  ],
  "license": "ISC",
  "repository": "github:zerodevx/svelte-toast",
  "homepage": "https://zerodevx.github.io/svelte-toast/",
  "keywords": [
    "svelte",
    "vanillajs",
    "toast",
    "notifications"
  ]
}
