{
  "name": "@zerodevx/svelte-toast",
  "version": "0.9.5",
  "description": "Simple elegant toast notifications",
  "author": "Jason Lee <jason@zerodevx.com>",
  "scripts": {
    "dev": "vite dev",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json --watch",
    "format": "prettier --write .",
    "lint": "prettier --check . && eslint && npm run check",
    "test": "playwright test",
    "prepublishOnly": "echo 'Did you mean to publish `./package/`, instead of `./`?' && exit 1",
    "build": "zx build.mjs",
    "package": "zx build.mjs --packageOnly"
  },
  "peerDependencies": {
    "svelte": "^4.0.0"
  },
  "devDependencies": {
    "@fontsource-variable/inter": "^5.1.0",
    "@playwright/test": "^1.47.1",
    "@sveltejs/adapter-static": "^3.0.4",
    "@sveltejs/kit": "^2.5.27",
    "@sveltejs/package": "^2.3.5",
    "@sveltejs/vite-plugin-svelte": "^3.1.2",
    "@types/eslint": "^9.6.1",
    "autoprefixer": "^10.4.20",
    "camelcase": "^7.0.1",
    "daisyui": "^3.9.4",
    "eslint": "^9.10.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-svelte": "^2.44.0",
    "globals": "^15.9.0",
    "is-port-reachable": "^4.0.0",
    "postcss": "^8.4.47",
    "postcss-load-config": "^4.0.2",
    "prettier": "^3.3.3",
    "prettier-plugin-svelte": "^3.2.6",
    "prettier-plugin-tailwindcss": "^0.6.6",
    "prismjs": "^1.29.0",
    "svelte": "^4.2.19",
    "svelte-check": "^4.0.2",
    "tailwindcss": "^3.4.11",
    "terser": "^5.32.0",
    "tslib": "^2.7.0",
    "typescript": "^5.6.2",
    "vite": "^5.4.5"
  },
  "type": "module",
  "exports": {
    ".": {
      "types": "./index.d.ts",
      "svelte": "./index.js"
    },
    "./dist": {
      "import": "./dist/index.es.js",
      "require": "./dist/index.umd.cjs"
    }
  },
  "svelte": "./index.js",
  "jsdelivr": "./dist/index.umd.js",
  "files": [
    "**/*"
  ],
  "license": "ISC",
  "repository": "github:zerodevx/svelte-toast",
  "homepage": "https://zerodevx.github.io/svelte-toast/",
  "keywords": [
    "svelte",
    "vanillajs",
    "toast",
    "notifications"
  ]
}
